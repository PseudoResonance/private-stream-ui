{
	"name": "private-stream-ui",
	"version": "1.1.1",
	"description": "A convenient web UI to act as a frontend for MediaMTX.",
	"author": "PseudoResonance",
	"main": "./src/index.ts",
	"private": true,
	"scripts": {
		"dev": "bun run ./src/index.ts",
		"prod": "NODE_ENV=production bun run ./src/index.ts",
