		"@eslint/js": "^9.39.1",
		"@types/yargs": "^17.0.34",
		"@typescript-eslint/parser": "^8.46.3",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-jsdoc": "^61.1.12",
		"eslint-plugin-lit": "^2.1.1",
		"eslint-plugin-perfectionist": "^4.10.1",
		"eslint-plugin-prettier": "^5.2.5",
